<Window x:Class="SakrijMe.ShowText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SakrijMe"
        mc:Ignorable="d"
        Title="ShowText" Height="300" Width="400" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="MainTextBox"></TextBox>
        <Button Grid.Row="1" Width="100" Margin="0,2" Click="Copy_Click">Kopiraj</Button>
    </Grid>
</Window>
