<Window x:Class="SakrijMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SakrijMe"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="MainTextBox"></TextBox>
        <Label Grid.Row="1" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top">Ključ za kriptiranje:</Label>
        <TextBox x:Name="KeyTextBox" Grid.Row="1" Width="100" Height="25" VerticalAlignment="Top" Margin="150,5,0,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" >0</TextBox>
        <Button Grid.Row="1" Width="100" Height="30" Click="Encrypt_Click">Kriptiraj</Button>
        <Button Grid.Row="1" Width="100" Height="30" Margin="0,80,0,0" Click="Decrypt_Click">Dekriptiraj</Button>
    </Grid>
</Window>
